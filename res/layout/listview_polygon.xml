<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
   
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
         >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            
             >
            <TextView
                android:id="@+id/polygonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称：" />

            <TextView
                android:id="@+id/polygonNameshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="polygonName" />
             
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
             >
            <TextView
                android:id="@+id/polygonArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="面积:" />

            <TextView
                android:id="@+id/polygonAreashow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 m²" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
             >
            <TextView
                android:id="@+id/polygonLines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线段:" />

            <TextView
                android:id="@+id/polygonLinesshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 条" />
        </LinearLayout>

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=">" />
        
    </LinearLayout>

</LinearLayout>
